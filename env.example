# =============================================================================
# CONFIGURACIÓN DEL CHATBOT WHATSAPP - AGROPECUARIA JURADÓ S.A.S
# =============================================================================

# =============================================================================
# WHATSAPP BUSINESS API
# =============================================================================

# Token de acceso de WhatsApp Business API
# Obtener desde: https://developers.facebook.com/apps/
WHATSAPP_ACCESS_TOKEN=tu_token_de_whatsapp_aqui

# ID del número de teléfono de WhatsApp
# Obtener desde: https://developers.facebook.com/apps/
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id_aqui

# Token de verificación del webhook
# Debe coincidir con el configurado en Meta Developers
WHATSAPP_VERIFY_TOKEN=Agrojurado2026

# =============================================================================
# BASE DE DATOS MYSQL
# =============================================================================

# URL de conexión a la base de datos MySQL
# Formato: mysql://usuario:password@host:puerto/nombre_base_datos
DATABASE_URL=mysql://agrojurado:password@localhost:3306/agrojura_web

# Configuración alternativa de base de datos (si no usas DATABASE_URL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=agrojura_web
DB_USER=agrojurado
DB_PASSWORD=tu_password_aqui

# =============================================================================
# GOOGLE GEMINI AI
# =============================================================================

# API Key de Google Gemini para respuestas automáticas
# Obtener desde: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=tu_api_key_de_gemini_aqui

# =============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================================================

# Host del servidor (0.0.0.0 para todas las interfaces)
HOST=0.0.0.0

# Puerto del servidor
PORT=8000

# Modo de desarrollo (True/False)
DEBUG=True

# =============================================================================
# CONFIGURACIÓN DE LOGS
# =============================================================================

# Nivel de logs (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Archivo de logs (opcional)
LOG_FILE=logs/app.log

# =============================================================================
# CONFIGURACIÓN DE CORS
# =============================================================================

# Orígenes permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Clave secreta para JWT (cambiar en producción)
SECRET_KEY=tu_clave_secreta_aqui_cambiar_en_produccion

# Tiempo de expiración de tokens (en segundos)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CONFIGURACIÓN DE NOTIFICACIONES
# =============================================================================

# Habilitar notificaciones por email (True/False)
ENABLE_EMAIL_NOTIFICATIONS=False

# Configuración de email (si está habilitado)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================

# Habilitar métricas de monitoreo (True/False)
ENABLE_METRICS=False

# URL del endpoint de métricas
METRICS_URL=http://localhost:9090

# =============================================================================
# CONFIGURACIÓN DE BACKUP
# =============================================================================

# Habilitar backup automático de base de datos (True/False)
ENABLE_AUTO_BACKUP=False

# Ruta para almacenar backups
BACKUP_PATH=./backups

# Frecuencia de backup (en horas)
BACKUP_FREQUENCY=24

# =============================================================================
# CONFIGURACIÓN DE LIMITES
# =============================================================================

# Límite de mensajes por minuto por usuario
RATE_LIMIT_MESSAGES_PER_MINUTE=10

# Límite de contactos que se pueden cargar por página
CONTACTS_PER_PAGE=50

# Límite de mensajes que se pueden cargar por página
MESSAGES_PER_PAGE=50

# =============================================================================
# CONFIGURACIÓN DE MENSAJES AUTOMÁTICOS
# =============================================================================

# Habilitar respuestas automáticas (True/False)
ENABLE_AUTO_RESPONSES=True

# Tiempo de espera antes de enviar respuesta automática (en segundos)
AUTO_RESPONSE_DELAY=2

# Mensaje de bienvenida automático
WELCOME_MESSAGE=¡Hola! Bienvenido a Agropecuaria Juradó S.A.S. ¿En qué puedo ayudarte?

# =============================================================================
# CONFIGURACIÓN DE ARCHIVOS
# =============================================================================

# Ruta para almacenar archivos subidos
UPLOAD_PATH=./uploads

# Tamaño máximo de archivos (en bytes)
MAX_FILE_SIZE=10485760  # 10MB

# Tipos de archivo permitidos
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# =============================================================================
# CONFIGURACIÓN DE CACHE
# =============================================================================

# Habilitar cache (True/False)
ENABLE_CACHE=True

# Tiempo de vida del cache (en segundos)
CACHE_TTL=3600  # 1 hora

# =============================================================================
# CONFIGURACIÓN DE WEBSOCKET
# =============================================================================

# Habilitar WebSocket (True/False)
ENABLE_WEBSOCKET=True

# Tiempo de ping del WebSocket (en segundos)
WEBSOCKET_PING_INTERVAL=30

# Tiempo de timeout del WebSocket (en segundos)
WEBSOCKET_TIMEOUT=60

# =============================================================================
# CONFIGURACIÓN DE PLANTILLAS
# =============================================================================

# Habilitar gestión de plantillas (True/False)
ENABLE_TEMPLATES=True

# Categoría por defecto para nuevas plantillas
DEFAULT_TEMPLATE_CATEGORY=marketing

# Idioma por defecto para plantillas
DEFAULT_TEMPLATE_LANGUAGE=es

# =============================================================================
# CONFIGURACIÓN DE CONTACTOS
# =============================================================================

# Habilitar gestión de contactos (True/False)
ENABLE_CONTACTS=True

# Sincronizar contactos automáticamente (True/False)
AUTO_SYNC_CONTACTS=True

# Frecuencia de sincronización de contactos (en minutos)
CONTACTS_SYNC_FREQUENCY=60

# =============================================================================
# CONFIGURACIÓN DE MENSAJES MASIVOS
# =============================================================================

# Habilitar envío de mensajes masivos (True/False)
ENABLE_BULK_MESSAGES=True

# Límite de mensajes masivos por hora
BULK_MESSAGES_LIMIT_PER_HOUR=100

# Tiempo de espera entre mensajes masivos (en segundos)
BULK_MESSAGE_DELAY=1

# =============================================================================
# CONFIGURACIÓN DE REPORTES
# =============================================================================

# Habilitar generación de reportes (True/False)
ENABLE_REPORTS=True

# Formato por defecto de reportes (pdf, csv, excel)
DEFAULT_REPORT_FORMAT=pdf

# Ruta para almacenar reportes
REPORTS_PATH=./reports

# =============================================================================
# CONFIGURACIÓN DE INTEGRACIONES
# =============================================================================

# Habilitar integración con CRM (True/False)
ENABLE_CRM_INTEGRATION=False

# URL del CRM
CRM_URL=https://tu-crm.com/api

# Token de autenticación del CRM
CRM_TOKEN=tu_token_del_crm

# =============================================================================
# CONFIGURACIÓN DE ANALÍTICAS
# =============================================================================

# Habilitar analíticas (True/False)
ENABLE_ANALYTICS=True

# URL de Google Analytics (opcional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Habilitar modo de desarrollo (True/False)
DEVELOPMENT_MODE=True

# Habilitar logs detallados (True/False)
VERBOSE_LOGGING=True

# Habilitar reload automático (True/False)
AUTO_RELOAD=True

# =============================================================================
# CONFIGURACIÓN DE PRUEBAS
# =============================================================================

# Habilitar modo de pruebas (True/False)
TESTING_MODE=False

# URL de la base de datos de pruebas
TEST_DATABASE_URL=mysql://test_user:test_password@localhost:3306/test_agrojura_web

# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =============================================================================

# Habilitar modo de producción (True/False)
PRODUCTION_MODE=False

# URL del dominio en producción
PRODUCTION_URL=https://tu-dominio.com

# Configuración de SSL (True/False)
ENABLE_SSL=False

# Certificado SSL (ruta al archivo)
SSL_CERT_PATH=/path/to/certificate.crt

# Clave privada SSL (ruta al archivo)
SSL_KEY_PATH=/path/to/private.key

# =============================================================================
# CONFIGURACIÓN DE MONITOREO DE SALUD
# =============================================================================

# Habilitar endpoint de salud (True/False)
ENABLE_HEALTH_CHECK=True

# URL del endpoint de salud
HEALTH_CHECK_URL=/health

# Tiempo de timeout para health check (en segundos)
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# CONFIGURACIÓN DE MIGRACIONES
# =============================================================================

# Habilitar migraciones automáticas (True/False)
AUTO_MIGRATE=True

# Crear tablas automáticamente (True/False)
AUTO_CREATE_TABLES=True

# =============================================================================
# CONFIGURACIÓN DE LIMPIEZA
# =============================================================================

# Habilitar limpieza automática de logs (True/False)
AUTO_CLEAN_LOGS=True

# Días para mantener logs
LOG_RETENTION_DAYS=30

# Habilitar limpieza automática de archivos temporales (True/False)
AUTO_CLEAN_TEMP_FILES=True

# Días para mantener archivos temporales
TEMP_FILES_RETENTION_DAYS=7 